# Environment Configuration for Automated Ticket Dashboard
# Copy this file to .env and customize for your deployment

# =============================================================================
# CORE DASHBOARD CONFIGURATION
# =============================================================================

# Port Configuration (automatic conflict detection)
DASHBOARD_PORT=3000
DASHBOARD_ADMIN_PORT=3001
DASHBOARD_HOST=0.0.0.0

# Claude Integration
CLAUDE_DATA_DIR=/Users/nalve/.claude
CLAUDE_BASE_DIR=/claude-data

# =============================================================================
# PERFORMANCE AND MONITORING
# =============================================================================

# Resource Limits
MAX_MEMORY=512M
MAX_CPU=0.5
RESERVED_MEMORY=256M
RESERVED_CPU=0.25

# Monitoring Configuration
LOG_LEVEL=info
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
FILE_WATCH_ENABLED=true

# Dashboard Engine Settings
REFRESH_INTERVAL=5000
AUTO_SYNC_ENABLED=true
REAL_TIME_SYNC=true

# =============================================================================
# AUTOMATION FEATURES
# =============================================================================

# File Movement Automation
AUTO_FILE_MOVEMENT=true
VALIDATE_INTEGRITY=true

# Registry Synchronization
SYNC_ON_CHANGE=true
BACKUP_ON_UPDATE=true

# Lifecycle Management
AUTO_ARCHIVE=true
VALIDATION_REQUIRED=true
TEMPLATE_ENFORCEMENT=true

# =============================================================================
# BACKUP AND ARCHIVAL
# =============================================================================

# Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Archival Settings
ARCHIVAL_DELAY_DAYS=30
AUDIT_TRAIL_ENABLED=true

# =============================================================================
# NETWORK AND SECURITY
# =============================================================================

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16
ENABLE_SSL=false
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem

# Security Settings
ENABLE_AUTH=false
JWT_SECRET=your-jwt-secret-here
SESSION_TIMEOUT=3600

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Performance Monitoring
MONITOR_INTERVAL=60
COLLECT_METRICS_INTERVAL=300

# Alert Thresholds
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=80
ALERT_THRESHOLD_ERROR_RATE=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=3

# Log Destinations
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_FORMAT=json

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment
NODE_ENV=production

# Debug Settings
DEBUG_ENABLED=false
VERBOSE_LOGGING=false

# Development Ports (when NODE_ENV=development)
DEV_DASHBOARD_PORT=3100
DEV_ADMIN_PORT=3101

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# External API Configuration
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_NOTIFICATIONS_ENABLED=false

# Database Configuration (if needed for future expansion)
DATABASE_URL=
REDIS_URL=

# =============================================================================
# CONTAINER ORCHESTRATION
# =============================================================================

# Restart Policies
RESTART_POLICY=unless-stopped

# Scaling Configuration
REPLICAS=1
UPDATE_CONFIG_PARALLELISM=1
UPDATE_CONFIG_DELAY=10s

# Resource Reservations
MEMORY_RESERVATION=256M
CPU_RESERVATION=0.25