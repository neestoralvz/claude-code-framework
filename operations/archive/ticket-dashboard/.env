# Production Environment Configuration for Automated Ticket Dashboard
# Configured for local deployment with intelligent port management

# =============================================================================
# CORE DASHBOARD CONFIGURATION
# =============================================================================

DASHBOARD_PORT=3000
DASHBOARD_ADMIN_PORT=3001
DASHBOARD_HOST=0.0.0.0

# Claude Integration
CLAUDE_DATA_DIR=/Users/nalve/.claude
CLAUDE_BASE_DIR=/claude-data

# =============================================================================
# PERFORMANCE AND MONITORING
# =============================================================================

LOG_LEVEL=info
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
FILE_WATCH_ENABLED=true

# Dashboard Engine Settings
REFRESH_INTERVAL=5000
AUTO_SYNC_ENABLED=true
REAL_TIME_SYNC=true

# =============================================================================
# AUTOMATION FEATURES
# =============================================================================

AUTO_FILE_MOVEMENT=true
VALIDATE_INTEGRITY=true
SYNC_ON_CHANGE=true
BACKUP_ON_UPDATE=true
AUTO_ARCHIVE=true
VALIDATION_REQUIRED=true
TEMPLATE_ENFORCEMENT=true

# =============================================================================
# BACKUP AND ARCHIVAL
# =============================================================================

BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
ARCHIVAL_DELAY_DAYS=30
AUDIT_TRAIL_ENABLED=true

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

MONITOR_INTERVAL=60
ALERT_THRESHOLD_CPU=80
ALERT_THRESHOLD_MEMORY=80
ALERT_THRESHOLD_ERROR_RATE=5

# =============================================================================
# ENVIRONMENT
# =============================================================================

NODE_ENV=production
DEBUG_ENABLED=false
VERBOSE_LOGGING=false