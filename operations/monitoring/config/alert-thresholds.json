{
  "alert_configuration": {
    "version": "1.0.0",
    "alert_system": "real_time_monitoring",
    "escalation_enabled": true,
    "notification_channels": ["system_console", "dashboard_alerts", "integration_triggers"]
  },
  "performance_thresholds": {
    "command_execution_time": {
      "metric": "execution_duration_seconds",
      "warning_threshold": 0.8,
      "critical_threshold": 1.0,
      "measurement_window": "1_second",
      "escalation_delay": "immediate",
      "remediation_action": "automatic_optimization"
    },
    "system_resource_usage": {
      "metric": "cpu_memory_utilization_percent",
      "warning_threshold": 8.0,
      "critical_threshold": 10.0,
      "measurement_window": "5_seconds",
      "escalation_delay": "30_seconds",
      "remediation_action": "resource_optimization"
    },
    "monitoring_overhead": {
      "metric": "monitoring_system_impact_percent",
      "warning_threshold": 8.0,
      "critical_threshold": 10.0,
      "measurement_window": "10_seconds",
      "escalation_delay": "60_seconds",
      "remediation_action": "monitoring_optimization"
    }
  },
  "compliance_thresholds": {
    "protocol_compliance_score": {
      "metric": "claude_md_compliance_percentage",
      "warning_threshold": 95.0,
      "critical_threshold": 90.0,
      "measurement_window": "continuous",
      "escalation_delay": "immediate",
      "remediation_action": "protocol_correction"
    },
    "command_delegation_accuracy": {
      "metric": "proper_delegation_percentage",
      "warning_threshold": 95.0,
      "critical_threshold": 90.0,
      "measurement_window": "continuous",
      "escalation_delay": "immediate",
      "remediation_action": "delegation_correction"
    },
    "quality_gate_completion": {
      "metric": "quality_gates_passed_percentage",
      "warning_threshold": 98.0,
      "critical_threshold": 95.0,
      "measurement_window": "per_command_execution",
      "escalation_delay": "immediate",
      "remediation_action": "quality_enforcement"
    }
  },
  "availability_thresholds": {
    "system_uptime": {
      "metric": "system_availability_percentage",
      "target_threshold": 99.9,
      "warning_threshold": 99.5,
      "critical_threshold": 99.0,
      "measurement_window": "24_hours",
      "escalation_delay": "immediate",
      "remediation_action": "failover_activation"
    },
    "monitoring_system_uptime": {
      "metric": "monitoring_availability_percentage", 
      "target_threshold": 99.9,
      "warning_threshold": 99.5,
      "critical_threshold": 99.0,
      "measurement_window": "24_hours",
      "escalation_delay": "immediate",
      "remediation_action": "monitoring_redundancy"
    }
  },
  "predictive_thresholds": {
    "performance_degradation_trend": {
      "metric": "performance_decline_rate",
      "warning_threshold": "5_percent_per_hour",
      "critical_threshold": "10_percent_per_hour",
      "measurement_window": "1_hour",
      "prediction_horizon": "4_hours",
      "remediation_action": "preventive_optimization"
    },
    "compliance_drift_detection": {
      "metric": "compliance_decline_rate",
      "warning_threshold": "2_percent_per_hour",
      "critical_threshold": "5_percent_per_hour", 
      "measurement_window": "1_hour",
      "prediction_horizon": "2_hours",
      "remediation_action": "preventive_correction"
    }
  },
  "escalation_rules": {
    "level_1_immediate": {
      "trigger_conditions": ["critical_threshold_breach"],
      "actions": ["immediate_notification", "automatic_remediation_trigger"],
      "notification_targets": ["system_console", "dashboard_alerts"],
      "escalation_delay": "0_seconds"
    },
    "level_2_automated": {
      "trigger_conditions": ["warning_threshold_sustained", "pattern_anomaly_detected"],
      "actions": ["automated_remediation", "performance_optimization"],
      "notification_targets": ["dashboard_alerts", "integration_systems"],
      "escalation_delay": "30_seconds"
    },
    "level_3_emergency": {
      "trigger_conditions": ["system_failure", "multiple_critical_alerts"],
      "actions": ["emergency_protocols", "failsafe_activation"],
      "notification_targets": ["all_channels", "emergency_systems"],
      "escalation_delay": "immediate"
    }
  },
  "alert_suppression": {
    "duplicate_alert_window": "60_seconds",
    "alert_grouping": "enabled",
    "noise_reduction": {
      "enabled": true,
      "algorithms": ["pattern_recognition", "threshold_adaptation"],
      "false_positive_threshold": "5_percent"
    }
  }
}
