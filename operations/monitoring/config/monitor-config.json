{
  "monitoring_framework": {
    "version": "1.0.0",
    "name": "Claude Code System Health Monitor",
    "description": "Comprehensive real-time monitoring for CLAUDE.md protocol compliance and system health",
    "initialization_timestamp": "system_startup",
    "monitoring_mode": "continuous_24x7"
  },
  "system_components": {
    "protocol_compliance": {
      "claude_md_compliance": {
        "enabled": true,
        "check_interval": "1_second",
        "metrics": [
          "principle_loading_sequence_compliance",
          "command_delegation_adherence", 
          "authority_hierarchy_validation",
          "quality_gate_execution_status"
        ]
      },
      "command_delegation": {
        "enabled": true,
        "check_interval": "0.5_seconds",
        "metrics": [
          "proper_command_selection",
          "delegation_pathway_integrity",
          "specialist_deployment_accuracy",
          "workflow_execution_compliance"
        ]
      }
    },
    "performance_monitoring": {
      "execution_time": {
        "enabled": true,
        "sample_rate": "continuous",
        "target_threshold": "1_second",
        "warning_threshold": "0.8_seconds"
      },
      "resource_utilization": {
        "enabled": true,
        "sample_rate": "5_seconds", 
        "target_threshold": "10_percent",
        "warning_threshold": "8_percent"
      },
      "system_availability": {
        "enabled": true,
        "sample_rate": "1_second",
        "target_threshold": "99.9_percent",
        "warning_threshold": "99.5_percent"
      }
    },
    "session_state": {
      "validation_frequency": "continuous",
      "health_checks": [
        "session_initialization_status",
        "framework_integrity_verification",
        "active_command_tracking",
        "specialist_deployment_status"
      ]
    }
  },
  "data_collection": {
    "real_time_metrics": {
      "collection_interval": "1_second",
      "retention_period": "24_hours",
      "storage_location": "operations/monitoring/metrics/realtime/"
    },
    "performance_data": {
      "collection_interval": "5_seconds",
      "retention_period": "7_days",
      "storage_location": "operations/monitoring/metrics/performance/"
    },
    "compliance_data": {
      "collection_interval": "1_second", 
      "retention_period": "30_days",
      "storage_location": "operations/monitoring/metrics/compliance/"
    },
    "trend_analysis": {
      "collection_interval": "1_minute",
      "retention_period": "90_days",
      "storage_location": "operations/monitoring/metrics/trends/"
    }
  },
  "dashboard_config": {
    "refresh_rate": "1_second",
    "auto_refresh": true,
    "display_components": [
      "system_status_overview",
      "performance_metrics_display",
      "alert_management_interface",
      "integration_status_monitoring"
    ]
  },
  "integration_points": {
    "command_reference_matrix": {
      "enabled": true,
      "integration_type": "automatic_remediation",
      "trigger_conditions": [
        "performance_threshold_breach",
        "protocol_violation_detected",
        "system_health_degradation"
      ]
    },
    "protocol_compliance_verifier": {
      "enabled": true,
      "integration_type": "real_time_checking",
      "sync_interval": "immediate"
    }
  }
}
