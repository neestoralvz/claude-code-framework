# API Integration Template Environment Configuration

# ==============================================
# API Configuration
# ==============================================

# Base URL for the API service
API_BASE_URL=http://localhost:3001/api/v1

# Request timeout in milliseconds
API_TIMEOUT=10000

# Authentication configuration
API_AUTH_TYPE=bearer
API_AUTH_TOKEN=your-bearer-token-here
# API_AUTH_KEY=your-api-key-here
# API_AUTH_HEADER=X-API-Key
# API_AUTH_USERNAME=your-username
# API_AUTH_PASSWORD=your-password

# ==============================================
# Resilience Configuration
# ==============================================

# Retry configuration
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1000
RETRY_MAX_DELAY=30000
RETRY_BACKOFF_MULTIPLIER=2
RETRY_JITTER_FACTOR=0.1

# Circuit breaker configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
CIRCUIT_BREAKER_MONITORING_PERIOD=10000
CIRCUIT_BREAKER_VOLUME_THRESHOLD=10
CIRCUIT_BREAKER_ERROR_PERCENTAGE_THRESHOLD=50

# ==============================================
# Logging Configuration
# ==============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Node.js environment
NODE_ENV=development

# Enable pretty printing for development
LOG_PRETTY=true

# ==============================================
# Monitoring Configuration
# ==============================================

# Enable metrics collection
ENABLE_METRICS=true

# Metrics collection window in milliseconds
METRICS_WINDOW=300000

# Maximum data points to keep in memory
METRICS_MAX_DATA_POINTS=1000

# Health check configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# ==============================================
# Validation Configuration
# ==============================================

# Enable request validation
REQUEST_VALIDATION_ENABLED=true

# Enable strict validation mode
REQUEST_VALIDATION_STRICT_MODE=false

# Enable response transformation
RESPONSE_TRANSFORMATION_ENABLED=true

# ==============================================
# Mock Server Configuration (for testing)
# ==============================================

# Mock server port
MOCK_SERVER_PORT=3001

# Enable mock server CORS
MOCK_SERVER_CORS=true

# Mock server request logging
MOCK_SERVER_LOG_REQUESTS=true

# ==============================================
# Performance Configuration
# ==============================================

# HTTP agent configuration
HTTP_KEEP_ALIVE=true
HTTP_KEEP_ALIVE_TIMEOUT=30000
HTTP_MAX_SOCKETS=50

# Connection pool settings
CONNECTION_POOL_MAX_SIZE=100
CONNECTION_POOL_MIN_SIZE=10

# ==============================================
# Security Configuration
# ==============================================

# Enable request/response sanitization in logs
LOG_SANITIZE_HEADERS=true

# Sensitive headers to sanitize (comma-separated)
SENSITIVE_HEADERS=authorization,x-api-key,cookie,x-auth-token

# Enable SSL verification
SSL_VERIFY=true

# Custom CA certificates path
# SSL_CA_PATH=/path/to/ca-certificates.pem

# ==============================================
# Rate Limiting Configuration
# ==============================================

# Rate limit requests per minute
RATE_LIMIT_RPM=1000

# Rate limit burst capacity
RATE_LIMIT_BURST=100

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW=60000

# ==============================================
# Cache Configuration
# ==============================================

# Enable response caching
CACHE_ENABLED=false

# Cache TTL in milliseconds
CACHE_TTL=300000

# Maximum cache entries
CACHE_MAX_ENTRIES=1000

# Cache storage type (memory, redis)
CACHE_STORAGE=memory

# Redis configuration (if using Redis cache)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ==============================================
# Development & Testing Configuration
# ==============================================

# Enable development mode features
DEVELOPMENT_MODE=true

# Enable test mode
TEST_MODE=false

# Test timeout in milliseconds
TEST_TIMEOUT=30000

# Enable code coverage
ENABLE_COVERAGE=false

# ==============================================
# Deployment Configuration
# ==============================================

# Application port
PORT=3000

# Metrics endpoint port
METRICS_PORT=9090

# Health check endpoint port
HEALTH_PORT=8080

# Process management
PM2_INSTANCES=0
PM2_MAX_MEMORY_RESTART=1000M

# ==============================================
# External Services Configuration
# ==============================================

# Database configuration (if applicable)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# Message queue configuration (if applicable)
# REDIS_URL=redis://localhost:6379
# RABBITMQ_URL=amqp://localhost:5672

# Monitoring services
# PROMETHEUS_ENABLED=false
# PROMETHEUS_PORT=9091
# GRAFANA_ENABLED=false

# Error tracking
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=development

# ==============================================
# Feature Flags
# ==============================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable request tracing
ENABLE_REQUEST_TRACING=true

# Enable performance profiling
ENABLE_PROFILING=false

# Enable request/response debugging
ENABLE_DEBUG_LOGGING=false

# ==============================================
# Custom Configuration
# ==============================================

# Add your custom environment variables here

# Example: Third-party service configuration
# PAYMENT_API_URL=https://api.payment-provider.com/v1
# PAYMENT_API_KEY=your-payment-api-key

# Example: Feature-specific configuration
# FEATURE_ADVANCED_MATH_ENABLED=true
# FEATURE_EQUATION_SOLVER_ENABLED=true