{
  "name": "rest-api-integration-template",
  "version": "1.0.0",
  "description": "Comprehensive REST API integration solution with best practices",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "validate": "npm run lint && npm run test",
    "demo": "node examples/demo.js",
    "monitor": "node examples/monitoring-demo.js"
  },
  "keywords": [
    "rest-api",
    "integration",
    "http-client",
    "circuit-breaker",
    "retry-logic",
    "monitoring",
    "validation"
  ],
  "author": "Integration Specialist",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "joi": "^17.11.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.54.0",
    "nock": "^13.4.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/examples/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}