pattern_metadata:
  id: "standard-breadcrumb-v1"
  name: "Standard Navigation Breadcrumb"
  version: "1.0.0"
  category: "navigation"
  subcategory: "breadcrumb"
  description: "Standard breadcrumb navigation pattern with configurable levels and hub linking"
  author: "Claude Code System"
  created_date: "2025-08-19"
  last_modified: "2025-08-19"
  
dependencies:
  required: []
  optional: ["hub-navigation-atoms/framework-hub"]
  conflicts: []
  
composition:
  composable: true
  standalone: true
  customization_points: ["breadcrumb_chain", "hub_type", "current_page"]
  
performance:
  caching_strategy: "static"
  lazy_loading: false
  generation_cost: "low"
  
pattern_content:
  template: |
    {{#breadcrumb_chain}}
    [{{display_name}}]({{path}}){{#unless @last}} | {{/unless}}
    {{/breadcrumb_chain}}
    
  customization_schema:
    breadcrumb_chain:
      type: "array"
      required: true
      description: "Array of breadcrumb objects with display_name and path"
      schema:
        display_name: "string"
        path: "string"
        hub_type: "string"
    hub_type:
      type: "string"
      required: false
      default: "framework"
      options: ["framework", "domain", "section"]
      description: "Type of hub for appropriate icon selection"
    current_page:
      type: "string"
      required: false
      description: "Current page title for accessibility"
      
validation_rules:
  - rule_id: "breadcrumb-chain-required"
    description: "Breadcrumb chain must contain at least one item"
    validation_logic: "breadcrumb_chain.length > 0"
    severity: "error"
    
  - rule_id: "path-format-valid"
    description: "All paths should be relative markdown links"
    validation_logic: "breadcrumb_chain.every(item => /^[^/].*\.md(#.*)?$/.test(item.path))"
    severity: "warning"
    
usage_examples:
  - name: "Basic breadcrumb navigation"
    description: "Standard three-level breadcrumb navigation"
    example: |
      breadcrumb_chain:
        - display_name: "🏠 Framework Hub"
          path: "../../../index.md"
          hub_type: "framework"
        - display_name: "🏗️ Architecture Hub"
          path: "../../index.md"
          hub_type: "domain"
        - display_name: "📋 Patterns Hub"
          path: "../index.md"
          hub_type: "section"
          
  - name: "Architecture-specific breadcrumb"
    description: "Architecture domain breadcrumb with specialized hubs"
    example: |
      breadcrumb_chain:
        - display_name: "🏠 Framework Hub"
          path: "../../../../index.md"
          hub_type: "framework"
        - display_name: "🏗️ Architecture Hub"
          path: "../../../index.md"
          hub_type: "domain"
        - display_name: "🤖 Agent Matrix"
          path: "agent-orchestration/agent-capability-matrix.md"
          hub_type: "section"