pattern_metadata:
  id: "standard-frontmatter-v1"
  name: "Standard YAML Frontmatter"
  version: "1.0.0"
  category: "metadata"
  subcategory: "frontmatter"
  description: "Standard YAML frontmatter template with validation and consistency enforcement"
  author: "Claude Code System"
  created_date: "2025-08-19"
  last_modified: "2025-08-19"
  
dependencies:
  required: []
  optional: ["authority-atoms/authority-scope", "dependency-atoms/dependency-declaration"]
  conflicts: []
  
composition:
  composable: true
  standalone: true
  customization_points: ["title", "author", "date", "version", "purpose", "dependencies", "domain"]
  
performance:
  caching_strategy: "static"
  lazy_loading: false
  generation_cost: "low"
  
pattern_content:
  template: |
    ---
    title: "{{title}}"
    {{#if author}}author: "{{author}}"{{/if}}
    date: "{{date}}"
    {{#if version}}version: "{{version}}"{{/if}}
    {{#if purpose}}purpose: "{{purpose}}"{{/if}}
    {{#if dependencies}}dependencies: {{json dependencies}}{{/if}}
    {{#if domain}}domain: "{{domain}}"{{/if}}
    {{#if tags}}tags: {{json tags}}{{/if}}
    {{#if category}}category: "{{category}}"{{/if}}
    {{#if status}}status: "{{status}}"{{/if}}
    {{#if priority}}priority: "{{priority}}"{{/if}}
    ---
    
  customization_schema:
    title:
      type: "string"
      required: true
      description: "Document title in proper case"
      validation: "length >= 5 && length <= 100"
    author:
      type: "string"
      required: false
      default: "Claude Code System"
      description: "Author or system identifier"
    date:
      type: "string"
      required: true
      pattern: "^\\d{4}-\\d{2}-\\d{2}$"
      description: "Creation or last modified date (YYYY-MM-DD)"
    version:
      type: "string"
      required: false
      pattern: "^\\d+\\.\\d+\\.\\d+$"
      description: "Semantic version number"
    purpose:
      type: "string"
      required: false
      description: "Brief purpose or mission statement"
      validation: "length <= 200"
    dependencies:
      type: "array"
      required: false
      description: "Array of dependency file paths or identifiers"
      items:
        type: "string"
        pattern: ".*\\.md$"
    domain:
      type: "string"
      required: false
      description: "Domain classification for specialized documents"
      options: ["architecture", "agents", "commands", "principles", "operations"]
    tags:
      type: "array"
      required: false
      description: "Classification tags for searchability"
      items:
        type: "string"
    category:
      type: "string"
      required: false
      description: "Primary category classification"
    status:
      type: "string"
      required: false
      options: ["active", "draft", "deprecated", "archived"]
      default: "active"
      description: "Document lifecycle status"
    priority:
      type: "string"
      required: false
      options: ["critical", "high", "medium", "low"]
      description: "Priority level for maintenance and updates"
      
validation_rules:
  - rule_id: "title-required"
    description: "Title field is mandatory for all documents"
    validation_logic: "title !== undefined && title.length > 0"
    severity: "error"
    
  - rule_id: "date-format-valid"
    description: "Date must be in YYYY-MM-DD format"
    validation_logic: "/^\\d{4}-\\d{2}-\\d{2}$/.test(date)"
    severity: "error"
    
  - rule_id: "version-semantic"
    description: "Version should follow semantic versioning"
    validation_logic: "!version || /^\\d+\\.\\d+\\.\\d+$/.test(version)"
    severity: "warning"
    
  - rule_id: "dependencies-exist"
    description: "Dependencies should reference valid files"
    validation_logic: "!dependencies || dependencies.every(dep => file_exists(dep))"
    severity: "warning"
    
  - rule_id: "purpose-concise"
    description: "Purpose should be concise but descriptive"
    validation_logic: "!purpose || (purpose.length >= 10 && purpose.length <= 200)"
    severity: "info"
    
usage_examples:
  - name: "Architecture document frontmatter"
    description: "Standard frontmatter for architecture documentation"
    example: |
      title: "System Architecture Overview"
      author: "Claude Code System"
      date: "2025-08-19"
      version: "3.1.0"
      purpose: "Comprehensive system architecture specification and implementation guide"
      dependencies: ["../principles/core-authority/directive.md", "../principles/quality-assurance/validation.md"]
      domain: "architecture"
      tags: ["architecture", "system-design", "core"]
      category: "specification"
      status: "active"
      priority: "critical"
          
  - name: "Agent specification frontmatter"
    description: "Frontmatter for agent specification documents"
    example: |
      title: "Pattern Management Specialist Agent"
      author: "Claude Code System"
      date: "2025-08-19"
      version: "1.0.0"
      purpose: "Specialized agent for pattern detection, consolidation, and lifecycle management"
      dependencies: ["../core-system/validation-engineer.md"]
      domain: "agents"
      tags: ["agent", "pattern-management", "consolidation"]
      category: "specialist"
      status: "active"
      priority: "high"
      
  - name: "Command documentation frontmatter"
    description: "Frontmatter for command documentation"
    example: |
      title: "System Architecture Analysis Command"
      date: "2025-08-19"
      version: "2.1.0"
      purpose: "Comprehensive system architecture analysis with dependency mapping"
      domain: "commands"
      tags: ["command", "analysis", "architecture"]
      category: "analysis"
      status: "active"